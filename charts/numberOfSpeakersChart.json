{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Trend of Speakers of Australian Indigenous Languages",
    "fontSize": 16,
    "anchor": "middle",
    "fontWeight": "bold"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/jeffreyyan4/FIT3179/main/data/australia_language_census_data_cleaned.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Language == 'Australian Indigenous Languages'"
    },
    {
      "fold": ["2001", "2006", "2011", "2016", "2021"],
      "as": ["Year", "Count"]
    },
    {
      "calculate": "toNumber(datum.Year)",
      "as": "Year"
    },
    {
      "calculate": "toNumber(datum.Count)",
      "as": "Count"
    }
  ],
  "width": 300,
  "height": 250,
  "mark": {
    "type": "line",
    "point": true
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "axis": {"format": "d"},
      "title": "Year"
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Number of Speakers"
    },
    "tooltip": [
      {"field": "Year", "type": "quantitative", "title": "Year"},
      {"field": "Count", "type": "quantitative", "title": "Number of Speakers"}
    ]
  }
}
