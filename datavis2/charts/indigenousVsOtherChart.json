{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Number of Speakers: Australian Indigenous Languages vs Other Languages by Year",
    "fontSize": 16,
    "anchor": "middle",
    "fontWeight": "bold"
  },
  "width": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/jeffreyyan4/FIT3179/main/datavis2/data/australia_language_census_data_cleaned.csv",
    "format": { "type": "csv" }
  },
  "params": [
    {
      "name": "yearSelect",
      "value": "2021",
      "bind": {
        "input": "select",
        "options": ["2021", "2016", "2011", "2006", "2001"],
        "name": "Select Year: "
      }
    }
  ],
  "vconcat": [
    {
      "width": 300,
      "height": 200,
      "transform": [
        {
          "fold": ["2021", "2016", "2011", "2006", "2001"],
          "as": ["Year", "Speakers"]
        },
        {
          "filter": "datum.Speakers > 0"
        },
        {
          "filter": "datum.Year === yearSelect"
        },
        {
          "filter": "datum.Language !== 'English'"
        },
        {
          "calculate": "datum.Language === 'Australian Indigenous Languages' ? 'Australian Indigenous Languages' : 'Other Languages (except English)'",
          "as": "LanguageGroup"
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "Speakers",
              "as": "TotalSpeakers"
            }
          ],
          "groupby": ["LanguageGroup"]
        }
      ],
      "mark": "arc",
      "encoding": {
        "theta": {
          "field": "TotalSpeakers",
          "type": "quantitative"
        },
        "color": {
          "field": "LanguageGroup",
          "type": "nominal",
          "scale": {
            "domain": [
              "Australian Indigenous Languages",
              "Other Languages (except English)"
            ],
            "range": ["#1f77b4", "#ff7f0e"]
          },
          "legend": {
            "title": "Language Group"
          }
        },
        "tooltip": [
          {
            "field": "LanguageGroup",
            "type": "nominal",
            "title": "Language Group"
          },
          {
            "field": "TotalSpeakers",
            "type": "quantitative",
            "title": "Number of Speakers"
          }
        ]
      }
    },
    {
      "width": 400,
      "height": 50,
      "transform": [
        {
          "fold": ["2021", "2016", "2011", "2006", "2001"],
          "as": ["Year", "Speakers"]
        },
        {
          "filter": "datum.Speakers > 0"
        },
        {
          "filter": "datum.Year === yearSelect"
        },
        {
          "filter": "datum.Language === 'Australian Indigenous Languages'"
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "Speakers",
              "as": "TotalSpeakers"
            }
          ]
        },
        {
          "calculate": "'Number of Australian Indigenous Speakers in ' + yearSelect + ': ' + datum.TotalSpeakers",
          "as": "annotation_text"
        }
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 14,
        "fill": "black"
      },
      "encoding": {
        "text": {
          "field": "annotation_text",
          "type": "nominal"
        }
      }
    }
  ],
  "view": { "stroke": null },
  "config": {
    "title": {
      "fontSize": 16,
      "anchor": "middle",
      "fontWeight": "bold"
    }
  }
}
