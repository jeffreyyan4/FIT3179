{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Number of People Speaking Australian Indigenous Languages in Australia Over Time.",
    
    "data": {
      "url": "https://raw.githubusercontent.com/jeffreyyan4/FIT3179/main/datavis2/data/australia_language_census_data.csv",
      "format": {
        "type": "csv"
      }
    },
    
    "transform": [
      {
        "filter": "datum['Data label'] === 'Australian Indigenous Languages'"
      },
      {
        "fold": ["2001", "2006", "2011", "2016", "2021"],
        "as": ["Year", "Number of Speakers"]
      },
      {
        "filter": "datum.Year !== '' && datum['Number of Speakers'] !== ''"
      },
      {
        "calculate": "toNumber(datum['Number of Speakers'])",
        "as": "Number of Speakers"
      }
    ],
    
    "mark": {
      "type": "line",
      "point": true
    },
    
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal",
        "title": "Year",
        "sort": "ascending"
      },
      "y": {
        "field": "Number of Speakers",
        "type": "quantitative",
        "title": "Number of Speakers"
      },
      "color": {
        "value": "#1f77b4"
      },
      "tooltip": [
        {"field": "Year", "type": "ordinal", "title": "Year"},
        {"field": "Number of Speakers", "type": "quantitative"}
      ]
    },
    
    "title": "Australian Indigenous Languages: Number of Speakers Over Time"
  }
  